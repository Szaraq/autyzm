<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_columnWeight="1"
    android:layout_gravity="fill"
    android:layout_margin="2dp"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/lista_folderow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/multimediaItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/multimedia_left_margin"
            android:src="@drawable/ic_folder" />

        <TextView
            android:id="@+id/folder_name"
            style="@style/multimediaItem"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:lines="2"
            android:paddingLeft="4dp" />

        <ImageView
            android:id="@+id/foldery_context_menu"
            style="@style/contextMenu"
            android:background="@color/colorPrimary"
            android:paddingRight="@dimen/multimedia_left_margin"
            android:tint="@color/colorAppBackground" />

    </LinearLayout>

</android.support.v7.widget.CardView>