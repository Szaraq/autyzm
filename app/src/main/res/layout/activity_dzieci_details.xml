<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">

    <!-- TODO zamieniÄ‡ RelativeLayout na GridLayout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".dzieci.DzieciDetailsActivity">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:src="@drawable/ic_no_photo"/>

                <!--
                <TextView
                    android:id="@+id/dzieci_details_text"
                    android:layout_height="0dip"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" />
-->
                <EditText
                    android:id="@+id/data_urodzenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dzieci_details_data_urodzenia" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/imie"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:ems="10"
                    android:hint="@string/dzieci_details_imie"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/nazwisko"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingTop="15dp"
                    android:hint="@string/dzieci_details_nazwisko"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/rozpoczecie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:hint="@string/dzieci_details_rozpoczecie" />

            </LinearLayout>


        </LinearLayout>

        <EditText
            android:id="@+id/notatki"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="10"
            android:hint="@string/dzieci_details_notatki" />

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dane_rodzicow_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="7dp"
                android:paddingTop="15dp"
                android:text="@string/dzieci_details_dane_rodzicow"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <View
                android:id="@+id/divider"
                style="@style/DividerLine"
                android:layout_below="@id/dane_rodzicow_text" />

            <LinearLayout
                android:id="@+id/dane_rodzicow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/divider"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/dane_ojca"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/imie_ojca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="@string/dzieci_details_imie_ojca" />

                    <EditText
                        android:id="@+id/nazwisko_ojca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="@string/dzieci_details_nazwisko_ojca" />

                    <EditText
                        android:id="@+id/telefon_ojca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone"
                        android:hint="@string/dzieci_details_telefon_ojca" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></LinearLayout>

                <LinearLayout
                    android:id="@+id/dane_matki"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/imie_matki"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="@string/dzieci_details_imie_matki" />

                    <EditText
                        android:id="@+id/nazwisko_matki"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="@string/dzieci_details_nazwisko_matki" />

                    <EditText
                        android:id="@+id/telefon_matki"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone"
                        android:hint="@string/dzieci_details_telefon_matki" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button"
                style="@style/buttonStyle"
                android:layout_below="@id/dane_rodzicow"
                android:text="@string/dzieci_details_button_zapisz" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>