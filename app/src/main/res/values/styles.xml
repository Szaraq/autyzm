<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupMenuStyle">@style/popupMenuStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Text -->
    <style name="TextMenu" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#000</item>
    </style>

    <style name="TextListHeader" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorHeader</item>
    </style>

    <style name="TextHint" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!-- EditText -->
    <style name="EditTextGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="EditTextGrid.Left" parent="EditTextGrid">
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <!-- View -->
    <style name="DividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDividerLine</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="DividerLine.RecyclerView" parent="DividerLine">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!-- Button -->
    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAppBackground</item>
    </style>

    <style name="myFAB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:src">@drawable/ic_add</item>
        <item name="android:tint">@color/colorAppBackground</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="innerFAB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/colorPrimary</item>
        <item name="fab_colorPressed">@color/colorPrimaryDark</item>
        <item name="fab_colorRipple">@color/colorPrimaryRipple</item>
    </style>

    <!-- List -->
    <style name="PaddingForFAB">
        <item name="android:paddingBottom">100dp</item>
        <item name="android:clipToPadding">false</item>
    </style>
    <style name="multimediaItem">
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">@color/colorAppBackground</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:tint">@color/colorAppBackground</item>
    </style>

    <!-- Popup menu -->
    <style name="popupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/colorAppBackground</item>
    </style>

</resources>
