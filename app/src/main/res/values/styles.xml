<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupMenuStyle">@style/popupMenuStyle</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>


    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TextView -->
    <style name="TextMenu" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#000</item>
    </style>

    <style name="TextListHeader" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorHeader</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="TextHint" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="TextDesignLabel" parent="Theme.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorAppBackground</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAppBackground</item>
        <item name="colorControlNormal">@color/colorAppBackground</item>
        <item name="colorControlActivated">@color/colorAppBackground</item>
    </style>
    <style name="TextDesignLabel.Dark" parent="Theme.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>
    <style name="TextDesignLabel.Primary" parent="Theme.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorGreyDisabled</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorGreyDisabled</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <style name="DzieciDetailsSubheader">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="DzieciDetailsTelefonyRodzicow" parent="EditTextMaterial.EditTextDzieciDetailsLayer">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginLeft">55dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="DzieciDetailsTelefonyRodzicowHeader" parent="DzieciDetailsTelefonyRodzicow">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="HelpKontakt">
        <item name="android:layout_marginLeft">@dimen/contact_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!-- EditText -->
    <style name="EditTextGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditTextGrid.Left" parent="EditTextGrid">
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="EditTextMaterial">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="EditTextMaterial.EditTextLogin" parent="EditTextMaterial">
        <item name="android:background">@drawable/edit_text_bottom_border</item>
        <item name="android:textColor">@color/colorAppBackground</item>
    </style>
    <style name="EditTextMaterial.EditTextDzieciDetailsLayer" parent="EditTextMaterial">
        <item name="android:layout_marginLeft">@dimen/contact_margin</item>
        <item name="android:theme">@style/TextDesignLabel.Primary</item>
    </style>
    <style name="EditTextMaterial.EditTextDzieciDetails" parent="EditTextMaterial">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- View -->
    <style name="DividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDividerLine</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="DividerLine.RecyclerView" parent="DividerLine">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="EmptySpaceFiller">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Button -->
    <style name="buttonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAppBackground</item>
        <item name="android:elevation">4dp</item>
        <!--<item name="android:stateListAnimator">@null</item>-->
    </style>

    <style name="buttonStyle.bottomButton" parent="buttonStyle">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="buttonStyle.buttonNext" parent="buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:text">@string/button_next</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="buttonInPanel" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="myFAB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:src">@drawable/ic_add</item>
        <item name="android:tint">@color/colorAppBackground</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="innerFAB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/colorPrimary</item>
        <item name="fab_colorPressed">@color/colorPrimaryDark</item>
        <item name="fab_colorRipple">@color/colorPrimaryRipple</item>
    </style>

    <!-- List -->
    <style name="PaddingForFAB">
        <item name="android:paddingBottom">100dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="multimediaItem">
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">@color/colorAppBackground</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:tint">@color/colorAppBackground</item>
    </style>

    <style name="itemList">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">5</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">@dimen/item_text_margin</item>
        <item name="android:text">Small Text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- Popup menu -->
    <style name="popupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/colorAppBackground</item>
    </style>

    <!-- Progress Bar -->
    <style name="progressBar" parent="android:Widget.DeviceDefault.Light.ProgressBar.Horizontal">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- ImageView -->
    <style name="listItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="contextMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:background">@null</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:src">@drawable/ic_context_menu</item>
    </style>
    <style name="arrow">
        <item name="android:src">@drawable/ic_arrow</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="arrow.up" parent="arrow">
        <item name="android:rotation">90</item>
    </style>
    <style name="arrow.down" parent="arrow">
        <item name="android:rotation">270</item>
    </style>
    <style name="telefon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_call</item>
        <item name="android:tint">@color/colorGreen</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
