<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lista_modulow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--
        android:elevation="2dp"
        android:clipToPadding="false"
        android:outlineProvider="bounds"
        -->


        <ImageView
            android:id="@+id/modul_photo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:paddingLeft="5dp"
            android:src="@drawable/ic_module" />

        <TextView
            android:id="@+id/modul_name"
            android:layout_height="wrap_content"
            style="@style/itemList" />

        <ImageView
            android:id="@+id/arrow_up"
            style="@style/arrow.up" />

        <ImageView
            android:id="@+id/arrow_down"
            style="@style/arrow.down" />

        <ImageView
            android:id="@+id/modul_context_menu"
            style="@style/contextMenu" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        style="@style/DividerLine.RecyclerView"/>

</LinearLayout>